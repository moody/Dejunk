<Bindings>
  <!-- Toggle options frame -->
  <Binding name="DEJUNK_TOGGLE_OPTIONS_FRAME" header="DEJUNK_HEADER_GENERAL" category="BINDING_CATEGORY_DEJUNK">
    DejunkBindings_ToggleOptionsFrame()
  </Binding>

  <!-- Toggle sell frame -->
  <Binding name="DEJUNK_TOGGLE_SELL_FRAME" category="BINDING_CATEGORY_DEJUNK">
    DejunkBindings_ToggleSellFrame()
  </Binding>

  <!-- Toggle destroy frame -->
  <Binding name="DEJUNK_TOGGLE_DESTROY_FRAME" category="BINDING_CATEGORY_DEJUNK">
    DejunkBindings_ToggleDestroyFrame()
  </Binding>

  <!-- Open lootables -->
  <Binding name="DEJUNK_OPEN_LOOTABLES" category="BINDING_CATEGORY_DEJUNK">
    DejunkBindings_OpenLootables()
  </Binding>

  <!-- Start selling -->
  <Binding name="DEJUNK_START_SELLING" header="DEJUNK_HEADER_SELL" category="BINDING_CATEGORY_DEJUNK">
    DejunkBindings_StartSelling()
  </Binding>

  <!-- Sell next item -->
  <Binding name="DEJUNK_SELL_NEXT_ITEM" category="BINDING_CATEGORY_DEJUNK">
    DejunkBindings_HandleNextItem("Dejunker")
  </Binding>

  <!-- Add/rem sell inclusions -->
  <Binding name="DEJUNK_ADD_INCLUSIONS" category="BINDING_CATEGORY_DEJUNK">
    DejunkBindings_AddToList("sell", "inclusions")
  </Binding>
  <Binding name="DEJUNK_REM_INCLUSIONS" category="BINDING_CATEGORY_DEJUNK">
    DejunkBindings_RemoveFromList("sell", "inclusions")
  </Binding>

  <!-- Add/rem sell exclusions -->
  <Binding name="DEJUNK_ADD_EXCLUSIONS" category="BINDING_CATEGORY_DEJUNK">
    DejunkBindings_AddToList("sell", "exclusions")
  </Binding>
  <Binding name="DEJUNK_REM_EXCLUSIONS" category="BINDING_CATEGORY_DEJUNK">
    DejunkBindings_RemoveFromList("sell", "exclusions")
  </Binding>

  <!-- Destroy next item -->
  <Binding name="DEJUNK_DESTROY_NEXT_ITEM" header="DEJUNK_HEADER_DESTROY" category="BINDING_CATEGORY_DEJUNK">
    DejunkBindings_HandleNextItem("Destroyer")
  </Binding>

  <!-- Add/rem destroy inclusions -->
  <Binding name="DEJUNK_ADD_DESTROYABLES" category="BINDING_CATEGORY_DEJUNK">
    DejunkBindings_AddToList("destroy", "inclusions")
  </Binding>
  <Binding name="DEJUNK_REM_DESTROYABLES" category="BINDING_CATEGORY_DEJUNK">
    DejunkBindings_RemoveFromList("destroy", "inclusions")
  </Binding>

  <!-- Add/rem destroy exclusions -->
  <Binding name="DEJUNK_ADD_UNDESTROYABLES" category="BINDING_CATEGORY_DEJUNK">
    DejunkBindings_AddToList("destroy", "exclusions")
  </Binding>
  <Binding name="DEJUNK_REM_UNDESTROYABLES" category="BINDING_CATEGORY_DEJUNK">
    DejunkBindings_RemoveFromList("destroy", "exclusions")
  </Binding>
</Bindings>
